<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.codespurt.broadcastreceiver.MainActivity">

    <Button
        android:id="@+id/btn_custom_broadcast_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_custom_broadcast_intent"
        android:textSize="@dimen/text_size" />

    <Button
        android:id="@+id/btn_ordered_broadcast_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/send_ordered_broadcast_intent"
        android:textSize="@dimen/text_size" />

</LinearLayout>
